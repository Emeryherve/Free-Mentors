{
  "name": "server",
  "version": "1.0.0",
  "description": "Free Mentors is a social initiative where accomplished professionals become role models to young people to provide free mentorship sessions.",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "nyc --reporter=text --reporter=html mocha server/test --require @babel/polyfill --require @babel/register --timeout 10000 --exit",
    "start": "babel-node server/index.js",
    "dev-start": "nodemon --exec babel-node server/index.js",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "showCoverage": "start coverage/server/index.html"
  },

  "keywords": [
    "Mentors",
    "Free Mentors",
    "Andela challenge"
  ],

  "author": "Herve",
  "license": "MIT",
