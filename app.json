      "url": "https://github.com/Emeryherve/Free-Mentors/blob/develop/LICENCE.md"
     }
    },
    "host": "127.0.0.1:3000",
    "basePath": "/api/v1",
    "tags": [
     {
      "name": "User",
      "description": "Create account, Sign in & Change a user to mentor",
      "externalDocs": {
        "description": "Find out more",
        "url": "https://github.com/Emeryherve/Free-Mentors"
       }
     },
     {
      "name": "Mentor",
      "description": "Get all mentors & Get a specific mentor",
      "externalDocs": {
        "description": "Find out more",
        "url": "https://github.com/Emeryherve/Free-Mentors"
       }
     },
     {
      "name": "Session",
      "description": "Create, Accept & Reject Mentorship Session Request",
      "externalDocs": {
       "description": "Find out more",
       "url": "https://github.com/Emeryherve/Free-Mentors"
      }
     }
    ],
    "schemes": [
     "http"
    ],
    "paths": {
     "/auth/signup": {
      "post": {
       "tags": [
        "User"
       ],
       "summary": "Create user account",
       "description": "",
       "operationId": "signup",
       "consumes": [
        "application/json",
        "application/xml"
       ],
       "produces": [
        "application/xml",
        "application/json"
       ],
       "parameters": [
        {
         "in": "body",
         "name": "body",
         "description": "User object that's needed to create new account",
         "required": true,
         "schema": {
          "$ref": "#/definitions/signup"
         }
        }
       ],
       "responses": {
        "201": {
         "description": "Account Created Successfully"
        },
        "400": {
         "description": "Bad Request - invalid inputs "
          },
        "409": {
         "description": "User already exist"
        },
        "500": {
           "description": "Server error"
          }
       }
      }
     },
     "/auth/signin": {
      "post": {
       "tags": [
        "User"
       ],
       "summary": "signin user",
       "description": "",
       "operationId": "signin",
       "consumes": [
        "application/json",
        "application/xml"
       ],
       "produces": [
        "application/xml",
        "application/json"
       ],
       "parameters": [
        {
         "in": "body",
         "name": "body",
         "description": "User object that's needed to create new account",
         "required": true,
         "schema": {
          "$ref": "#/definitions/signin"
         }
        }
       ],
       "responses": {
           "200": {
            "description": "Signed in Successfully"
           },
           "400": {
              "description": "Bad Request - invalid inputs "
             },
           "401": {
            "description": "Incorrect credentials"
           },
           "500": {
              "description": "Server error"
             }
          }
      }
     },
     "/user/{userId}": {
      "patch": {
       "tags": [
        "User"
       ],
       "summary": "Change a user to a mentor.",
       "description": "",
       "operationId": "change-user",
       "produces": [
        "application/xml",
        "application/json"
       ],
       "parameters": [
        {
         "name": "x-auth-token",
         "in": "header",
         "type": "string",
         "description": "The value to provide in the  header of API request"
        },
        {
         "name": "userId",
         "in": "path",
         "description": "user id",
         "required": true,
         "type": "integer"
        }
       ],
       "responses": {
           "201": {
            "description": "User was changed Successfully"
           },
           "400": {
              "description": "Bad Request - invalid inputs "
             },
           "401": {
                "description": "Access denied"
               },             
           "403": {
               "description": "Not allowed to change a user"
              },
           "500": {
              "description": "Server error"
             }
          }
      }
     },
     "/mentors": {
      "get": {
       "tags": [
        "Mentor"
       ],
       "summary": "Get all mentors",
       "description": "User is able to fetch all available mentors",
       "parameters": [
        {
         "name": "x-auth-token",
         "in": "header",
         "description": "The user token"
        }
       ],
       "produces": [
        "application/json"
       ],
       "responses": {
           "200": {
            "description": "All mentors are retrieved successfully"
           },
           "400": {
              "description": "Bad Request - invalid inputs "
             },
           
           "403": {
               "description": "Not allowed to view mentors"
              },
           "404": {
               "description": "Mentors not found"
              },           
           "500": {
              "description": "Server error"
             }
          }
      }
     },
     "/mentors/{mentorId}": {
      "get": {
       "tags": [
        "Mentor"
       ],
       "summary": "Get a specific mentor",
       "description": "",
       "operationId": "get-specific-mentor",
       "consumes": [
        "application/json",
        "application/xml"
       ],
       "produces": [
        "application/xml",
        "application/json"
       ],
       "parameters": [
        {
         "name": "x-auth-token",
         "in": "header",
         "type": "string",
         "description": "The value to provide in the  header of API request"
        },
        {
         "name": "mentorId",
         "in": "path",
         "description": "Mentor id",
         "required": true,
         "type": "integer"
        }
       ],
       "responses": {
           "200": {
            "description": "Mentor retrieved Successfully"
           },
           "400": {
              "description": "Bad Request - invalid inputs "
             },
           "404": {
            "description": "Mentor not found"
           },
           "500": {
              "description": "Server error"
             }
          }
      }
     },
     "/sessions": {
      "post": {
       "tags": [
        "Session"
       ],
       "summary": "Create a mentorship session request",
       "description": "",
       "operationId": "create-session",
       "produces": [
        "application/xml",
        "application/json"
       ],
       "parameters": [
        {
         "name": "x-auth-token",
         "in": "header",
         "type": "string",
         "description": "The value to provide in the  header of API request"
        },
        {
         "name":"body",
         "in":"body",
         "schema":{
            "$ref": "#/definitions/sessionRequest"             
         }
        }
        ],
       "responses": {
           "201": {
            "description": "Session request sent Successfully"
           },
           "400": {
              "description": "Bad Request - invalid inputs "
             },
           "401": {
               "description": "Unauthorized - No token provided "
              },
           "404": {
               "description": "Mentor not found"
               },
           "500": {
              "description": "Server error"
             }
          }
      }
     },
     "/sessions/{sessionId}/accept": {
      "patch": {
       "tags": [
        "Session"
       ],
       "summary": "A mentor can accept a mentorship session request.",
       "description": "",
       "operationId": "accept-session",
       "produces": [
        "application/xml",
        "application/json"
       ],
       "parameters": [
        {
         "name": "x-auth-token",
         "in": "header",
         "type": "string",
         "description": "The value to provide in the  header of API request"
        },
        {
            "name": "sessionId",
            "in": "path",
            "type": "string",
            "description": "Session Id to accept"
        }
       ],
       "responses": {
           "200": {
            "description": "Session request accepted"
           },
           "400": {
              "description": "Bad Request - invalid inputs "
             },
           "401": {
               "description": "Unauthorized -  No token provided"
              },       
           "403": {
               "description": "Not allowed to accept this session"
              },
           "404": {
               "description": "Session not found"
              }, 
           "500": {
              "description": "Server error"
             }
          }
      }
     },
     "/sessions/{sessionId}/reject": {
        "patch": {
         "tags": [
          "Session"
         ],
         "summary": "A mentor can reject a mentorship session request.",
         "description": "",
         "operationId": "accept-session",
         "produces": [
          "application/xml",
          "application/json"
         ],
         "parameters": [
          {
           "name": "x-auth-token",
           "in": "header",
           "type": "string",
           "description": "The value to provide in the  header of API request"
          },
          {
            "name": "sessionId",
            "in": "path",
            "type": "string",
            "description": "Session Id to accept"
          }
         ],
         "responses": {
             "200": {
              "description": "Session request rejected"
             },
             "400": {
                "description": "Bad Request - invalid inputs "
               },
             "401": {
                 "description": "Unauthorized -  No token provided"
                },       
             "403": {
                 "description": "Not allowed to reject this session"
                },
             "404": {
                 "description": "Session not found"
                }, 
             "500": {
                "description": "Server error"
               }
            }
        }
       }     
    },
    "definitions": {
     "signup": {
      "type": "object",
      "properties": {
       "firstName": {
        "type": "string"
       },
       "lastName": {
        "type": "string"
       },
       "email": {
        "type": "string"
       },
       "password": {
        "type": "string"
       },
       "address": {
        "type": "string"
       },
       "bio": {
        "type": "string"
       },
       "occupation": {
        "type": "string"
       },
       "expertise": {
        "type": "string"
       }                       
      },
      "xml": {
       "name": "User Signup"
      }
     },
     "signin": {
      "type": "object",
      "properties": {
       "email": {
        "type": "string"
       },
       "password": {
        "type": "string"
       }
      },
      "xml": {
       "name": "User Signin"
      }
     },
     "sessionRequest": {
      "type":"object",
      "properties": {
        "mentorId": {
        "type": "integer"
        },
        "questions": {
         "type": "string"
        }
       },
       "xml": {
        "name": "Mentorship session request"
       }      
     }
    }
   }